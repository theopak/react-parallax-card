{
  "name": "react-parallax-card",
  "description": "React component for a 3D card with parallax effects similar to Apple TV app icons.",
  "version": "0.3.19",
  "author": "Theo Pak <theopak@gmail.com (https://github.com/theopak)",
  "license": "Apache-2.0",
  "homepage": "https://theopak.github.io/react-parallax-card/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/theopak/react-parallax-card.git"
  },
  "bugs": {
    "url": "https://github.com/theopak/react-parallax-card/issues"
  },
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "files": [
    "dist/es/",
    "dist/lib/",
    "dist/umd/",
    "LICENSE.txt",
    "README.md"
  ],
  "scripts": {
    "start": "nwb serve-react-demo",
    "lint": "eslint **/*.js --ignore-pattern '**/dist' --ignore-pattern '/docs'",
    "test": "react-scripts test --env=jsdom",
    "prebuild": "nwb check-config",
    "build": "rm -rf ./docs/* && nwb build-react-component && rm -rf ./dist/es ./dist/lib ./dist/umd && mv es lib umd ./dist/. && mv ./demo/dist/* ./docs/."
  },
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "styled-jsx/babel",
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "globals": {
      "__DEV__": true
    },
    "options": {
      "failOnError": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "object-curly-spacing": [
        "warn",
        "always"
      ]
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "demo",
      "es",
      "lib",
      "umd",
      "docs",
      "node_modules"
    ],
    "testRegex": [
      "\\.test\\.js$"
    ]
  },
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "styled-jsx": "^0.5.7"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "3.4.2",
    "eslint-plugin-react": "6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "nwb": "^0.15.6",
    "react-addons-test-utils": "^15.4.2",
    "react-scripts": "^0.9.0"
  }
}
