{
  "name": "react-parallax-card",
  "description": "React component for a 3D card with parallax effects similar to Apple TV app icons.",
  "version": "1.0.0-beta.3",
  "author": "Theo Pak <theopak@gmail.com> (https://github.com/theopak)",
  "license": "Apache-2.0",
  "homepage": "https://theopak.github.io/react-parallax-card/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/theopak/react-parallax-card.git"
  },
  "bugs": {
    "url": "https://github.com/theopak/react-parallax-card/issues"
  },
  "scripts": {
    "start": "nwb serve-react-demo",
    "lint": "eslint . --ignore '**/pkg' --ignore '/docs'",
    "test": "react-scripts test --env=jsdom",
    "build": "pika build",
    "postpublish": "rm -rf ./docs/*",
    "version": "npm run build"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "*.test.js",
            "__snapshots__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-umd",
        {
          "name": "ReactParallaxCard"
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "pika-plugin-minify"
      ],
      [
        "@pika/plugin-bundle-web"
      ]
    ]
  },
  "babel": {
    "plugins": [
      "styled-jsx/babel"
    ],
    "presets": [
      "@babel/preset-react"
    ],
    "env": {
      "test": {
        "plugins": [
          "styled-jsx/babel-test"
        ],
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "import/default": 2,
      "import/export": 2,
      "import/named": 2,
      "import/namespace": 2,
      "import/no-unresolved": 2,
      "sort-keys": 2
    }
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "/es",
      "/umd",
      "demo",
      "docs",
      "lib",
      "node_modules"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.7.2",
    "react-helmet": "^5.2.1",
    "styled-jsx": "^3.2.2"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-umd": "^0.6.1",
    "@pika/plugin-build-web": "^0.6.0",
    "@pika/plugin-bundle-web": "^0.6.1",
    "@pika/plugin-standard-pkg": "^0.6.0",
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react": "^6.23.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "jest-cli": "^24.9.0",
    "np": "^5.1.0",
    "pika-plugin-minify": "^0.1.0",
    "prettier": "1.10.2",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "react": "npm:@reactesm/react",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "npm:@reactesm/react-dom",
    "react-scripts": "^3.1.1",
    "react-test-renderer": "^16.9.0"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
